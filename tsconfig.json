{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "inlineSourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@di/*": ["./src/di/*"],
            "@core/*": ["./src/core/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}